{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://scqcs.com/schemas/vbw/outputs-1.0.schema.json",
  "title": "SCQCS VBW Outputs v1.0",
  "type": "object",
  "required": ["artifacts"],
  "properties": {
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "sha256", "size_bytes"],
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "mime": { "type": "string" },
          "build_id": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
